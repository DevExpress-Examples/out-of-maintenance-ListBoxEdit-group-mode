            <dxe:ListBoxEdit.EditTemplate>
                <ControlTemplate>
                    <dxe:EditorListBox x:Name="PART_Editor" Style="{dxi:ThemeResource {dxet:ListBoxEditThemeKey ResourceKey=ListBoxStyle}}"
                                       VirtualizingPanel.IsVirtualizingWhenGrouping="True"/>
                </ControlTemplate>
